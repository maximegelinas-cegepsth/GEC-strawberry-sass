<h1 class="app-page-title">@SharedLocalizer["Registration"]</h1>

<section class="row center-xs">
    <div class="col-md-10">
        
        <form [formGroup]="registerForm" (ngSubmit)="onSubmit()">
            <md-input type="text" placeholder="@SharedLocalizer["Username"]"
                      formControlName="userName"
                      [class.error]="isControlErrors('userName')">
                <md-hint>
                    <span *ngFor="let error of getControlErrors('userName')">
                        {{ error == 'required' ? "@SharedLocalizer["UsernameRequiredError"]" : '' }}
                        {{ error == 'maxlength' ? "@SharedLocalizer["UsernameMaxLengthError"]" : '' }}
                        {{ error == 'minlength' ? "@SharedLocalizer["UsernameMinLengthError"]" : '' }}
                    </span>
                </md-hint>
            </md-input>

            <md-input type="email" placeholder="@SharedLocalizer["EmailAddress"]"
                      formControlName="email"
                      [class.error]="isControlErrors('password')">
                <md-hint>
                    <span *ngFor="let error of getControlErrors('userName')">
                        {{ error == 'required' ? "@SharedLocalizer["EmailRequiredError"]" : '' }}
                        {{ error == 'pattern' ? "@SharedLocalizer["EmailPatternError"]" : '' }}
                    </span>
                </md-hint>
            </md-input>

            <md-input type="password" placeholder="@SharedLocalizer["Password"]"
                      formControlName="password"
                      [class.error]="isControlErrors('password')">
                <md-hint>
                    <span *ngFor="let error of getControlErrors('password')">
                        {{ error == 'required' ? "@SharedLocalizer["PasswordRequiredError"]" : '' }}
                        {{ error == 'maxlength' ? "@SharedLocalizer["PasswordMaxLengthError"]" : '' }}
                        {{ error == 'minlength' ? "@SharedLocalizer["PasswordMinLengthError"]" : '' }}
                        {{ error == 'pattern' ? "@SharedLocalizer["PasswordPatternError"]" : '' }}
                    </span>
                </md-hint>
            </md-input>
            
            <div class="app-confirm-section">
                <button type="submit"
                        md-button
                        [disabled]="!registerForm.valid">
                    @SharedLocalizer["Confirm"]
                </button>
            </div>

        </form>

    </div>
</section>